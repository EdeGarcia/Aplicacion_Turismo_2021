<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/publicacionColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgLugarPostList"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:src="@drawable/icono_subir_imagen" />
                <TextView
                    android:id="@+id/tvNombrePostList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="23sp"
                    android:text="NombreLugar"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tvDescripcionPostList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Descripcion"/>
                <LinearLayout
                    android:id="@+id/layoutImgsPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgPostList"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/icono_subir_imagen"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/dark_blue">
                        <ImageView
                            android:id="@+id/editPublication"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/editar"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/dark_blue">
                        <ImageView
                            android:id="@+id/deletePublication"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/eliminar"
                            android:layout_marginTop="4dp"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>