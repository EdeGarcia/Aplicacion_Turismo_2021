<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".View.TipoUsuarioActivity">

    <ImageView
        android:id="@+id/ivTurista"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/turista_icono"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTurista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivTurista"
        android:text="@string/turista_icon_name"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <ImageView
        android:id="@+id/ivLugar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/lugar_turistico_icono"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTurista" />
    <TextView
        android:id="@+id/tvLugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivLugar"
        android:text="@string/lugar_icon_name"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>